/frontend/.env.production

# Coverage reports and build files
/frontend/coverage/
frontend/build/
frontend/dist/

# Backend-specific ignores

# Only ignore the node_modules inside the backend
/backend/node_modules/

# Environment files (if they exist) should be ignored
/backend/.env
