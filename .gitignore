node_modules/
.pnp
.pnp.js

# environment variables
.env
.env.local
.env.development
.env.development.local
.env.test
.env.production

# logs
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# build output
/build
/dist

# misc
.DS_Store
Thumbs.db

